<body>
    
      <h1>反省 サークル</h1>
    <div class="session_container">
        <% unless session[:user] %>
            <div class="session_outer">
                <a href="/signin" class="btn_signin">ログイン</button> 
                <a href="/signup" class="btn_signup">新規登録</a>
            </div>
        <% else %>
            <div class="session_outer">
                <h2><%= current_user.userid %>さん</h2>            
                <a href="/signout" class="btn_signout">ログアウト</a>
            </div>
        <% end %>
    </div>


  
    <%= yield %>

<% if session[:user] %>
  <div class="div_new_button">
      <a href="/new"><i class="fa-solid fa-plus fa-3x"></i></a>
  </div>
 <% end %>
 
  
</body>
